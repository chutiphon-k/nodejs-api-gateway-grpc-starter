{
  "name": "nodejs-api-gateway-grpc-starter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test  node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NOCK_OFF=true jest --config ./test/jest-e2e.json --watch",
    "test:component": "NOCK_OFF=false jest --config ./test/jest-e2e.json --watch"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.2",
    "@nestjs/core": "^6.5.2",
    "@nestjs/graphql": "^6.4.1",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.5.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.2",
    "@sentry/minimal": "^5.5.0",
    "@sentry/node": "^5.5.0",
    "apollo-server-express": "^2.7.0",
    "axios": "^0.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "dotenv": "^8.0.0",
    "graphql": "^14.4.2",
    "graphql-bigint": "^1.0.0",
    "graphql-input-number": "^0.0.10",
    "graphql-type-json": "^0.3.0",
    "helmet": "^3.18.0",
    "lodash": "^4.17.21",
    "nest-raven": "^4.0.0",
    "nestjs-config": "^1.4.2",
    "nestjs-i18n": "^3.0.1",
    "nestjs-redis": "^1.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "type-graphql": "^0.17.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.2",
    "@types/axios": "^0.14.0",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/graphql-type-json": "^0.3.0",
    "@types/helmet": "^0.0.43",
    "@types/ioredis": "^4.0.13",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.6.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
